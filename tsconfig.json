{
    "compilerOptions": {
        "baseUrl": ".",
        "types": ["node"],
        "outDir": "dist/esm",
        "module": "esnext",
        "target": "es6",
        "jsx": "react-jsx",
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "paths": {
            "@/*": [
                "*"
            ],
            "react": [ "./node_modules/@types/react" ]
        }
    },
    "include": ["src"],
    "hooks": ["copy-files"],
    "exclude": ["node_modules","demo"]
}
